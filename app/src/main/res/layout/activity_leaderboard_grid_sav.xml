<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".leaderboard_grid_sav">

    <TableLayout
        android:layout_width="393dp"
        android:layout_height="395dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="248dp"
        android:background="@color/colorAccent"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="@android:color/holo_orange_dark"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp">


            <TextView
                android:id="@+id/txtvw11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:padding="10sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="Student ID"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvw12"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:padding="10sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="Student Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvw13"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:padding="10sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="Rank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvw21"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="More Info"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="@color/design_default_color_background"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp">

            <TextView
                android:id="@+id/txtvw14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:padding="15sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="amal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtvw15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:padding="15sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="it10" />

            <TextView
                android:id="@+id/txtvw16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="10sp"
                android:padding="15sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="1" />

            <Button
                android:id="@+id/bttn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Profile" />
        </TableRow>

        <TableRow
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@color/design_default_color_background"
            android:orientation="vertical"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp">

            <TextView
                android:id="@+id/txtvw17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="kamal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtvw18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="it20" />

            <TextView
                android:id="@+id/txtvw19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="2" />

            <Button
                android:id="@+id/bttn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="profile" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txtvwlb"
        android:layout_width="332dp"
        android:layout_height="103dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="579dp"
        android:background="@android:color/holo_green_dark"
        android:text="Leader Board"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>